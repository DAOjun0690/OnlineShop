@model IEnumerable<OnlineShop.Core.ViewModel.OrderViewModel>

@{
    ViewData["Title"] = "Index";
}

<div>　</div>
<h3>訂單列表</h3>
<hr />

@foreach (var item in Model)
{
    <table class="table border shadow-sm rounded">
        <thead class="">
            <tr>
                <th>訂單編號：#@Html.DisplayFor(modelItem => item.Order.Id)</th>
                <th>訂單日期：@Html.DisplayFor(modelItem => item.Order.OrderDate)</th>
                <th>金額</th>
                <th>付款狀態</th>
                <th>配送狀態</th>
                <th></th>
                <th class="control"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2">
                    @foreach (var citem in item.CartItems)
                    {
                        <p>@Html.DisplayFor(cartItem => citem.Product.Name) (@citem.ItemName)</p>
                    }
                </td>
                <td>
                    <span style="color:red">NT$@Html.DisplayFor(modelItem => item.Order.Total)</span>
                </td>
                <td>
                    @if (item.Order.isPaid)
                    {
                        <p>已付款</p>
                    }
                    else
                    {
                        <p>未付款</p>
                    }
                </td>
                <td>
                    @if (item.Order.isShip)
                    {
                        <p>已出貨</p>
                    }
                    else
                    {
                        <p>未出貨</p>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Order.Id">訂單詳細資訊</a>
                    @if (!item.Order.isPaid)
                    {
                        <a class="btn btn-sm btn-success" asp-action="StatusChange" asp-route-id="@item.Order.Id" asp-route-code="paid">已收款</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-danger" asp-action="StatusChange" asp-route-id="@item.Order.Id" asp-route-code="paid">未收款</a>
                    }
                    @if (!item.Order.isShip)
                    {
                        <a class="btn btn-sm btn-success" asp-action="StatusChange" asp-route-id="@item.Order.Id" asp-route-code="ship">已出貨</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-danger" asp-action="StatusChange" asp-route-id="@item.Order.Id" asp-route-code="ship">未出貨</a>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-danger " asp-action="Delete" asp-route-id="@item.Order.Id">刪除</a>
                </td>
            </tr>
        </tbody>
    </table>
}