@model ProductDetailViewModel

@{
    ViewData["Title"] = "商品詳細頁面";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="DetailForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />

    <div class="row">
        <div class="col pb-3">
            <div class="row">
                <div class="col-lg-7 col-sm-12">
                    <div class="row">
                        <div class="col-2">
                            @if (Model.ProductImage != null && Model.ProductImage.Any())
                            {
                                @foreach (ProductImage image in Model.ProductImage)
                                {
                                    <div class="row img-selector mb-1">
                                        <img src=@Url.Action("Download", "Picture", new { ProductId = image.ProductId, Guid = image.Guid }) alt="ring">
                                    </div>
                                }
                            }
                        </div>
                        <div class="col-10"></div>
                    </div>
                </div>
                <div class="col-lg-5 col-sm-12">
                    <h4>@Html.DisplayFor(m => m.Name)</h4>
                    <pre>@Html.DisplayFor(m => m.Description)</pre>
                    <hr />
                    <br />
                    <pre>@Html.DisplayFor(m => m.Promotion)</pre>
                    <h5 id="price" class="text-black fw-bold"></h5>
                    @* 款式 *@
                    <p class="alert-light m-0 mt-2">款式</p>
                    <select id="productStyles" class="form-select">
                        @foreach (var item in Model.ProductStylesList)
                        {
                            <option value="@item.Id" data-price="@item.Price" data-stock="@item.Stock">@item.Name</option>
                        }
                    </select>
                    <div class="form-group mt-2">
                        <label class="control-label alert-light">數量</label>
                        <input type="number" id="Amount" class="form-control" value="0" />
                    </div>
                    <div class="form-group mt-4">
                        <input type="submit" value="加入購物車" class="btn btn-outline-primary w-100" />
                    </div>
                    <div class="form-group mt-3">
                        <a asp-asp-controller="ProductManagement" asp-action="Index" class="btn btn-outline-secondary w-100">返回上一頁</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @Html.Raw(Model.Content)
        </div>
    </div>
</form>

@section Scripts {
    @{
        // 前端驗證
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function ShowMessage() {
            toastr["success"]("商品已加入購物車！");
        }

        $(document).ready(function () {
            // 綁定 款式異動事件
            $('#productStyles').change(function () {
                let price = $('option:selected', this).attr('data-price');
                $('#price').text(price);

                let stock = $('option:selected', this).attr('data-stock');
                $('#stock').text(stock);
                $("#Amount").prop("max", stock);
            }).change();

            $('#DetailForm').on('submit', function (e) {
                e.preventDefault();

                let productId = '@Model.ProductId';
                let productStyleId = $("#productStyles").val();
                let amount = $("#Amount").val();

                let param = {
                    ProductId: productId,
                    ProductStyleId: productStyleId,
                    Amount: amount
                };

                $.ajax({
                    type: 'POST',
                    url: '/Cart/AddtoCart',
                    data: param,
                    success: function (data) {
                        // 彈出 加入購物車 訊息
                        ShowMessage();
                    }
                });
            });
        });
    </script>
}