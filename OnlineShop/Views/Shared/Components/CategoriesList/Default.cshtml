@model IEnumerable<OnlineShop.Core.Models.Category>

<li class="nav-item dropdown">
    <a class="nav-link text-dark dropdown-toggle" id="categoryListBtn" role="button" href="#" data-bs-toggle="dropdown" aria-expanded="false">
        線上商店
    </a>
    <div class="dropdown-menu" aria-labelledby="categoryListBtn">
        <a class="dropdown-item" asp-controller="Products" asp-action="Index">所有商品</a>
        @foreach (var item in Model)
        {
            <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index" asp-route-cId="@item.Id">@item.Name</a>
        }
    </div>
</li>