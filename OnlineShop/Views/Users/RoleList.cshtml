@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "角色列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table rounded">
    <thead>
        <tr>
            <th scope="col" class="col-4 col-md-4">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col" class="col-4 col-md-6">@Html.DisplayNameFor(model => model.Id)</th>
            <th scope="col" class="col-4 col-md-2">
                <a class="btn btn-sm btn-primary w-100" asp-action="CreateRole">新增角色</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>
                    <div class="row justify-content-end">
                        <a class="btn btn-sm btn-info w-50" asp-action="EditRole" asp-route-id="@item.Id">編輯</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
