@model OnlineShop.Core.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h3>確定要將以下商品進行刪除?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="確認刪除" class="btn btn-danger" /> |
        <a asp-action="Index">取消</a>
    </form>
</div>
