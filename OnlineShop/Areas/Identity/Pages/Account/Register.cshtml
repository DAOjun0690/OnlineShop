@page
@model OnlineShop.Areas.Identity.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "建立新帳號";
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
            <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h1 class="fs-2 card-title fw-bold mb-4">建立一個新帳號</h1>
                            <div asp-validation-summary="ModelOnly" class="invalid-feedback"></div>
                            <div class="mb-3">
                                <label asp-for="Input.Email" class="mb-2 text-muted"></label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="mb-2 text-muted"></label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="mb-2 text-muted"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.Name" class="mb-2 text-muted"></label>
                                <input asp-for="Input.Name" class="form-control" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.DOB" class="mb-2 text-muted"></label>
                                <input asp-for="Input.DOB" class="form-control" />
                                <span asp-validation-for="Input.DOB" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Input.Gender" class="control-label mb-2 text-muted"></label>
                                <select asp-for="Input.Gender" class="form-control"
                                        asp-items="Html.GetEnumSelectList<GenderType>()">
                                    <option>Select type ...</option>
                                </select>
                                <span asp-validation-for="Input.Gender" class="text-danger"></span>
                            </div>
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
